<Page x:Class="File_Processor.Views.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:File_Processor.Views"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <TabControl Name="SettingTabs" SelectionChanged="SettingTabChanged" TabStripPlacement="Top" Height="410" Width="800" VerticalAlignment="Bottom" Margin="0,0,0,0">
            <TabItem Header="Categories">
                <!--<TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Categories</TextBlock>
                        
                    </StackPanel>
                </TabItem.Header>-->
                <StackPanel>
                    <Button Content="Add New Category" Name="AddCategory" Click="AddCategory_Click" Margin="0,10,0,0"/>
                    <DataGrid Name="categoryDataGrid" Height="200" Margin="0,1,0,0">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Category" Binding="{Binding category}"></DataGridTextColumn>
                            <DataGridTextColumn Header="File Path" Binding="{Binding filePath}"></DataGridTextColumn>
                            <DataGridTextColumn Header="Patterns" Binding="{Binding patternsToText}"></DataGridTextColumn>
                            <DataGridTemplateColumn Header="Edit">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Edit" Name="EditCategory" Click="AddCategory_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Delete">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--<ListView Height="200" Margin="0,1,0,0" d:ItemsSource="{d:SampleData ItemCount=5}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>-->
                </StackPanel>
            </TabItem>
            <TabItem Header="Deduplication">
                <!--<TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Deduplication</TextBlock>
                    </StackPanel>
                </TabItem.Header>-->
                <StackPanel>
                    <Frame></Frame>
                </StackPanel>
            </TabItem>
            <TabItem Header="Security">
                <!--<TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Security</TextBlock>
                    </StackPanel>
                </TabItem.Header>-->
                <StackPanel>
                    <Frame></Frame>
                </StackPanel>
            </TabItem>
        </TabControl>
        <Button Content="Main" Click="Change_To_Main_Page" HorizontalAlignment="Left" Padding="5,0,5,0" Margin="745,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
